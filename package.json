{
  "name": "mall-app",
  "version": "1.0.0",
  "description": "Application centre commercial avec backend Express et frontend Angular",
  "main": "backend/server.js",
  "scripts": {
    "install-all": "cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build": "echo 'Build completed'",
    "start": "node server.js",
    "deploy:render": "cd backend && npm install && npm start",
    "init-db": "node scripts/init-db.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": ["mall", "ecommerce", "angular", "express", "mongodb"],
  "author": "",
  "license": "ISC"
}